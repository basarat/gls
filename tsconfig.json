{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "isolatedModules": false,
        "esModuleInterop": true,
        "jsx": "react",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "lib": [
            "dom",
            "es6",
        ],
        "outDir": "lib"
    },
    "compileOnSave": false,
    "include": [
        "src"
    ]
}